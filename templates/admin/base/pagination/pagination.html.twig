{% if pagesCount > 0 %}
    <nav class="fossil-list-pagination">
        <ul class="pagination justify-content-center">
            <li class="page-item{% if currentPage <= 1 %} disabled{% endif %}">
                <a class="page-link" href="{{ url('app_admin_fossilList', { 'page': currentPage-1 }) }}" data-page="{{ currentPage-1 }}">&lt;</a>
            </li>

            {% for i in startPage..endPage %}

                <li class="page-item{% if currentPage is same as(i) %} active"{% endif %} aria-current="page">
                    <a class="page-link" href="{{ url('app_admin_fossilList', { 'page': i }) }}" data-page="{{ i }}">{{ i }}</a>
                </li>

            {% endfor %}

            <li class="page-item{% if currentPage >= lastPage %} disabled{% endif %}">
                <a class="page-link" href="{{ url('app_admin_fossilList', { 'page': currentPage+1 }) }}" data-page="{{ currentPage+1 }}">&gt;</a>
            </li>
        </ul>
    </nav>
{% endif %}