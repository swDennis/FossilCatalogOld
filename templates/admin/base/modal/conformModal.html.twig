{% block cmonformModal %}
    <div class="modal" id="confirm-modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Löschen</h5>
                    <button id="closeButton" type="button" class="close btn" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Willst du den Eintrag wirklich löschen?</p>
                </div>
                <div class="modal-footer">
                    <button id="yesButton" type="button" class="btn btn-primary">Ja</button>
                    <button id="noButton" type="button" class="btn btn-secondary" data-dismiss="modal">Nein</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}