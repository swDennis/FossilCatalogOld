<div class="mb-3">
    {% if errors %}
        <div class="form-error alert alert-danger" role="alert">
            {{ errors }}
        </div>
    {% endif %}
    <label for="{{ fieldName }}" class="form-label">{{ fieldLabel }}</label>
    <select name="{{ fieldName }}" class="form-control" multiple="multiple">
        {% for label, value in choiceList %}
            <option value="{{ value }}" {% if value in fieldValues %} selected="selected"{% endif %}>{{ label }}</option>
        {% endfor %}
    </select>
    {% if helpText|default(null) %}
        <div class="form-text">
            {{ helptext }}
        </div>
    {% endif %}
</div>